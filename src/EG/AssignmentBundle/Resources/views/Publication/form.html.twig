<div class="well">
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.project, "Project", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
        {{ form_errors(form.project) }}
        <div class="col-sm-4">
            {{ form_widget(form.project, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.pdf, "PDF", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
        {{ form_errors(form.pdf) }}
        <div class="col-sm-4">
            {{ form_widget(form.pdf, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.file, "File", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
        {{ form_errors(form.file) }}
        <div class="col-sm-4">
            {{ form_widget(form.file, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

    {{ form_rest(form) }}

    {{ form_end(form) }}
</div>

<script src="{{ asset("/js/addUser.js") }}"></script>
